
create database accounts;
use accounts;

CREATE TABLE `users` (
  `id` int(11) NOT NULL AUTO_INCREMENT,
  `name` varchar(100) NOT NULL,
  `active` varchar(1) DEFAULT 'Y',
  `createdOn` timestamp NOT NULL DEFAULT CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP,
  PRIMARY KEY (`id`),
  UNIQUE KEY `name` (`name`)
) ENGINE=InnoDB;


 CREATE TABLE `groups` (
  `id` int(11) NOT NULL AUTO_INCREMENT,
  `name` varchar(100) NOT NULL,
  `active` varchar(1) DEFAULT 'Y',
  `createdOn` timestamp NOT NULL DEFAULT CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP,
  PRIMARY KEY (`id`),
  UNIQUE KEY `name` (`name`)
) ENGINE=InnoDB;



CREATE TABLE `assignedGroups` (
  `userId` int(11) NOT NULL,
  `groupId` int(11) NOT NULL,
  `active` varchar(1) DEFAULT 'Y',
  `assignedOn` timestamp NOT NULL DEFAULT CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP,
  UNIQUE KEY `uniqueAssociation` (`userId`,`groupId`)
) ENGINE=InnoDB;

CREATE TABLE `SESSION_DATA` (
  `id` varchar(50) NOT NULL,
  `data` text,
  `time` timestamp NOT NULL DEFAULT CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP,
  `sess_lifetime` int(11) DEFAULT NULL,
  `TIMESTAMP` varchar(30) DEFAULT NULL,
  `TIME_STAMP` varchar(30) DEFAULT NULL,
  PRIMARY KEY (`id`)
) ENGINE=InnoDB;

Add host and credentials in file
src/Naukri/JobPostingGatewayBundle/Resources/config/database/nc_databases.yml

e.g
accounts:
  factory: ncPdoDatabase
  param:
    dsn: mysql:host=127.0.0.1;port=3306;dbname=accounts
    username:     root
    password:     root
    reconnect: true
